<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.cmu.chimps.googledocsplugin">

    <application android:allowBackup="true" android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true" android:theme="@style/AppTheme">
        <!-- TODO: move the extension along with title&description to a service and use activity only for settings -->
        <activity android:name=".MainActivity" android:label="@string/extension_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="edu.cmu.chimps.messageontap_prototype.Extension" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data android:name="description"
                android:value="@string/extension_description" />
        </activity>
    </application>

</manifest>