<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.cmu.chimps.googledocsplugin">

    <application android:allowBackup="true" android:icon="@drawable/google_docs"
        android:label="@string/app_name" android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true" android:theme="@style/AppTheme">

        <activity android:name=".GoogleDocsSettingsActivity"
            android:label="@string/title_settings"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".GoogleDocsPlugin"
            android:label="@string/extension_title">
            <intent-filter>
                <action android:name="edu.cmu.chimps.messageontap_prototype.Plugin" />
            </intent-filter>
            <meta-data android:name="description"
                android:value="@string/extension_description" />
            <meta-data android:name="settingsActivity"
                android:value=".GoogleDocsSettingsActivity" />
        </service>

    </application>

</manifest>